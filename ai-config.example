# BaseMind AI Assistant Configuration
# Copy this file to .env.ai and fill in your values

# OpenAI Configuration (for future OpenAI integration)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=openai/gpt-oss-20b

# AI Assistant Settings
AI_ASSISTANT_NAME=BaseMind
AI_ASSISTANT_ENABLED=true

# Security Settings
ALLOWED_ORIGIN=https://meetbase.app
CORS_ENABLED=true

# Rate Limiting for AI Chat
AI_CHAT_RATE_LIMIT=20
AI_CHAT_RATE_WINDOW_MS=60000

# Logging
AI_LOG_LEVEL=info
AI_LOG_REQUESTS=true

# Features
AI_QUICK_ACTIONS_ENABLED=true
AI_CONTEXT_AWARE=true
AI_MEMORY_ENABLED=false
